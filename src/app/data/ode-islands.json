      "text": {
        "title": "THE ODE ISLANDS",
        "subtitle": "'A Mixed Reality Voyage To Find Freedom'"
      },
      "ctaStart": "Begin Journey",
      "video": {
        "url": "1-crawling",
        "width": 1920,
        "height": 1080
